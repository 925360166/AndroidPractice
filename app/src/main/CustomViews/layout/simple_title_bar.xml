<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_simple_title_bar_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_dialog_title_bar_height"
    android:background="?attr/common_title_bar_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/common_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/common_color_c8"
        android:textSize="@dimen/common_font_size_f42"
        tools:text="消息" />

    <TextView
        android:id="@+id/common_txt_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/common_color_c8"
        android:textSize="@dimen/common_font_size_f42"
        android:visibility="gone"
        tools:text="(1)" />
</LinearLayout>
