<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--注意添加自定义view组件的标签名：包名 + 自定义View类名-->
    <!--控件背景设置为黑色-->
    <com.example.songwei.androidpractice.CustomViews.views.CircleView
        android:id="@+id/cv_circle_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#000000"
        android:padding="20dp"
        android:visibility="gone"
        app:circle_color="#ff4081" />

    <com.example.songwei.androidpractice.CustomViews.views.CircleWaveView
        android:id="@+id/cv_circle_wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.songwei.androidpractice.CustomViews.views.StepArcView
        android:id="@+id/cv_step_arc_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.example.songwei.androidpractice.CustomViews.views.CanvasCircleView
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="展示CommonDialogActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="btnShapeRectangle"
        android:text="展示-渐变色-矩形-Layer-list-Shape"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="btnShapeRectangle"
        android:text="展示-渐变色-圆角-按下后颜色改变-Shape-Button"
        android:textAllCaps="false" />

</LinearLayout>